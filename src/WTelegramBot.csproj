<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net5.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Telegram.Bot</RootNamespace>
    <Deterministic>true</Deterministic>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <PackageId>WTelegramBot</PackageId>
    <Version>0.0.0</Version>
    <Authors>Wizou</Authors>
    <Description>Telegram Bot API (local server) library providing more extended features&#10;&#10;Release Notes:&#10;$(ReleaseNotes.Replace("|", "%0D%0A").Replace(" - ","%0D%0A- ").Replace("  ", "%0D%0A%0D%0A"))</Description>
    <Copyright>Copyright © Olivier Marcoux 2024</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/wiz0u/WTelegramBot</PackageProjectUrl>
    <PackageIcon>logo.png</PackageIcon>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryUrl>https://github.com/wiz0u/WTelegramBot.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Telegram;Bot;Api;Client</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>$(ReleaseNotes.Replace("|", "%0D%0A").Replace(" - ","%0D%0A- ").Replace("  ", "%0D%0A%0D%0A"))</PackageReleaseNotes>
    <NoWarn>CS1574</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Link="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Telegram.Bot\src\Telegram.Bot\Exceptions\**\*Exception.cs" Link="TB.Exceptions/%(RecursiveDir)/%(FileName)%(Extension)" />
    <Compile Include="..\Telegram.Bot\src\Telegram.Bot\Polling\**\*" Link="TB.Polling/%(RecursiveDir)/%(FileName)%(Extension)" />
    <Compile Include="..\Telegram.Bot\src\Telegram.Bot\Types\**\*" Link="TB.Types/%(RecursiveDir)/%(FileName)%(Extension)" />
    <Compile Include="..\Telegram.Bot\src\Telegram.Bot\Requests\Getting Updates\GetUpdatesRequest.cs" Link="TB.Various\GetUpdatesRequest.cs" />
    <Compile Include="..\Telegram.Bot\src\Telegram.Bot\TelegramBotClientExtensions.Polling.cs" Link="TB.Various\TelegramBotClientExtensions.Polling.cs" />
    <Compile Include="..\Telegram.Bot\src\Telegram.Bot\Extensions\Extensions.cs" Link="TB.Various\Extensions.cs" />

  </ItemGroup>

  <ItemGroup>
    <Compile Remove="..\Telegram.Bot\src\Telegram.Bot\Types\Chat.cs" />
    <Compile Remove="..\Telegram.Bot\src\Telegram.Bot\Types\Enums\MessageEntityType.cs" />
    <Compile Remove="..\Telegram.Bot\src\Telegram.Bot\Types\InputFiles\InputFile.cs" />
    <Compile Remove="..\Telegram.Bot\src\Telegram.Bot\Types\MessageEntity.cs" />
    <Compile Remove="..\Telegram.Bot\src\Telegram.Bot\Types\Update.cs" />
    <Compile Remove="..\Telegram.Bot\src\Telegram.Bot\Types\User.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    <PackageReference Include="Required" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="Required" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WTelegramClient" Version="4.0.1-dev.5" />
  </ItemGroup>
</Project>
